                @Html.EditorFor(model => model.NotaExamen, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NotaExamen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Evaluaciones", "Evaluacion")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
