@model Web.Model.GetAsignaturasModel

@{
    ViewBag.Title = "Asignaturas";
}

<h2>Listado de Estudiantes</h2>

@if (Model != null)
{
    <div class="form-group row">
        @using (Html.BeginForm("Search", "Evaluacion", FormMethod.Post, new { @id = "SearchString" }))
        {
            <p>
                Filtrar por estado: @Html.TextBox("SearchString")
                <input type="submit" value="Search" class="btn btn-default" />
            </p>

        }
    </div>

    <div class="container">
        <table id="myGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Asignaturas[0].CodigoMateria)
                </th>
                <th>
                    Materia
                </th>
                <th>
                    Cedula
                </th>
                <th>
                    Estudiante
                </th>
                <th>
                    Nota Tareas
                </th>
                <th>
                    Nota Examen
                </th>
                <th>
                    Promedio
                </th>
                <th>
                    Estado
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model.Asignaturas)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoMateria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Materia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AlumnoCedula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Alumno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NotaTareas)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NotaExamen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Promedio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstadoStr)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PromedioGeneral, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.PromedioGeneral)
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")

    }

}
else
{
    <h2>@ViewBag.Title</h2>
    <h3>@ViewBag.Message</h3>

    <p>Use this area to provide additional information.</p>
}